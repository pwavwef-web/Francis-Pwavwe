rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection
    match /messages/{messageId} {
      // Allow authenticated admin (pwavwef@gmail.com) to read and delete
      allow read, delete: if request.auth != null 
                          && request.auth.token.email == 'pwavwef@gmail.com';
      
      // Allow anyone to create messages (from website contact form)
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'subject', 'message', 'timestamp'])
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.subject is string
                    && request.resource.data.message is string;
    }

    // Transactions collection (for finances)
    match /transactions/{transactionId} {
      allow read, write, delete: if request.auth != null 
                                  && request.auth.token.email == 'pwavwef@gmail.com';
    }

    // Tasks collection (for planning)
    match /tasks/{taskId} {
      allow read, write, delete: if request.auth != null 
                                  && request.auth.token.email == 'pwavwef@gmail.com';
    }

    // Blogs collection
    match /blogs/{blogId} {
      allow read, write, delete: if request.auth != null 
                                  && request.auth.token.email == 'pwavwef@gmail.com';
    }

    // Projects collection
    match /projects/{projectId} {
      allow read, write, delete: if request.auth != null 
                                  && request.auth.token.email == 'pwavwef@gmail.com';
    }
  }
}
