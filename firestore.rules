rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Messages collection
    match /messages/{messageId} {
      // Allow authenticated admin (pwavwef@gmail.com) to read and delete
      allow read, delete: if request.auth != null 
                          && request.auth.token.email == 'pwavwef@gmail.com';
      
      // Allow anyone to create messages (from website contact form)
      allow create: if request.resource.data.keys().hasAll(['name', 'email', 'subject', 'message', 'timestamp'])
                    && request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.subject is string
                    && request.resource.data.message is string;
    }

    // Transactions collection (for finances)
    match /transactions/{transactionId} {
      allow read: if request.auth != null 
                  && request.auth.token.email == 'pwavwef@gmail.com';
      allow create: if request.auth != null 
                    && request.auth.token.email == 'pwavwef@gmail.com'
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null 
                            && request.auth.token.email == 'pwavwef@gmail.com'
                            && resource.data.userId == request.auth.uid;
    }

    // Tasks collection (for planning)
    match /tasks/{taskId} {
      allow read: if request.auth != null 
                  && request.auth.token.email == 'pwavwef@gmail.com';
      allow create: if request.auth != null 
                    && request.auth.token.email == 'pwavwef@gmail.com'
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null 
                            && request.auth.token.email == 'pwavwef@gmail.com'
                            && resource.data.userId == request.auth.uid;
    }

    // Blogs collection
    match /blogs/{blogId} {
      allow read: if request.auth != null 
                  && request.auth.token.email == 'pwavwef@gmail.com';
      allow create: if request.auth != null 
                    && request.auth.token.email == 'pwavwef@gmail.com'
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null 
                            && request.auth.token.email == 'pwavwef@gmail.com'
                            && resource.data.userId == request.auth.uid;
    }

    // Project files collection
    match /projectFiles/{fileId} {
      allow read: if request.auth != null 
                  && request.auth.token.email == 'pwavwef@gmail.com';
      allow create: if request.auth != null 
                    && request.auth.token.email == 'pwavwef@gmail.com'
                    && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null 
                            && request.auth.token.email == 'pwavwef@gmail.com'
                            && resource.data.userId == request.auth.uid;
    }

    // Certificate orders collection (Midnight in Love event)
    match /certificateOrders/{orderId} {
      // Anyone can submit an order (payment is verified client-side via Paystack ref)
      allow create: if request.resource.data.keys().hasAll(['name', 'committee', 'email', 'phone', 'paymentRef', 'timestamp'])
                    && request.resource.data.name is string
                    && request.resource.data.committee is string
                    && request.resource.data.email is string
                    && request.resource.data.phone is string
                    && request.resource.data.paymentRef is string;
      // Only admin can read (formdata.html)
      allow read: if request.auth != null
                  && request.auth.token.email == 'pwavwef@gmail.com';
      // No updates or deletes from client
      allow update, delete: if false;
    }
  }
}
